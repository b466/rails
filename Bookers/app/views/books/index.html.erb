<% if flash[:notice] %>
	<div class="flass">
		<%= flash[:notice] %>
		</div>
<% end %>
<h1>Books</h1>
<table>
	<tr>
		<th>title</th>
		<th>body</th>
	</tr>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>
				<%= book.title %>
			</td>
			<td>
				<%= book.body %>
			</td>
			<td>
				<%= link_to 'Show', book_path(book.id) %>
			</td>
			<td>
				<%= link_to 'Edit', edit_book_path(book.id) %>
			</td>
			<td>
				<%= link_to 'Destroy', book_path(book.id), method: :delete %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>




<h2>New book</h2>

<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
